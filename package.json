{
    "name": "REPLACE_ME",
    "version": "0.0.0",
    "description": "A modern TypeScript npm package template with ESM support, testing, and linting",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "build": "npm run clean && tsc -p tsconfig.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src tests",
        "lint:fix": "eslint src tests --fix",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
        "prepare": "npm run build",
        "prepublishOnly": "npm run lint && npm run format:check && npm test && npm run build"
    },
    "keywords": [
        "typescript",
        "template",
        "npm",
        "package",
        "esm"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/pnagoorkar/npm-ts-template.git"
    },
    "bugs": {
        "url": "https://github.com/pnagoorkar/npm-ts-template/issues"
    },
    "homepage": "https://github.com/pnagoorkar/npm-ts-template#readme",
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "@types/eslint__js": "^8.42.3",
        "@types/jest": "^29.5.14",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "^10.1.8",
        "jest": "^29.7.0",
        "prettier": "^3.6.2",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.3.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.46.2"
    }
}
